import numpy as np
import matplotlib.pyplot as plt

# t goes from 0 to 2*pi
t = np.linspace(0, 2 * np.pi, 1000)

# Parametric equations for a heart
x = 16 * np.sin(t)**3
y = 12 * np.cos(t) - 5 * np.cos(2*t) - 2*np.cos(3*t) - np.cos(4*t)

plt.figure(figsize=(7,7))
plt.plot(x, y, color='red')
plt.fill_between(x, y, color='red')  # optional: fill the heart
plt.axis('off')                        # remove axes for effect
plt.title("I love you <3 Letka", fontsize=16)
plt.show()
